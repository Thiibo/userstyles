{
  "settings": {
    "t": {
      "type": "selectbar",
      "label": "Theme",
      "options": {
        "cl": {
          "label": "Classic",
          "pvwmarkup": {
            "bg": "#424242",
            "header": "#333",
            "inner": "#2d2d2d"
          }
        },
        "sb": {
          "label": "Sea blue",
          "pvwmarkup": {
            "bg": "#3e4155",
            "header": "#343542",
            "inner": "#2f303c"
          }
        },
        "db": {
          "label": "Deep black",
          "pvwmarkup": {
            "bg": "#212121",
            "header": "#191919",
            "inner": "#171717"
          }
        }
      }
    },
    "cc": {
      "type": "checkbox",
      "label": "Use custom colors?",
      "group": {
        "c1": {
          "type": "color",
          "label": "Primary color",
          "default": "#4d97ff"
        },
        "c2": {
          "type": "color",
          "label": "Secundary color",
          "default": "#ff8c1a"
        }
      }
    }
  },
  "preview": {
    "header": {
      "pos": [0, 0],
      "width": "100%",
      "height": "1.5vh"
    },
    "inner": {
      "pos": [0, 0],
      "anchor": [false, true],
      "width": "calc(100% - 9vw)",
      "height": "19.6vh"
    },
    "stage": {
      "pos": ["0.1vw", "3vh"],
      "anchor": [true, false],
      "width": "8.2vw",
      "height": "11.9vh",
      "always": "white"
    }
  }
}
