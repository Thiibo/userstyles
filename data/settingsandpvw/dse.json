{
  "settings": {
    "t": {
      "type": "selectbar",
      "label": "Theme",
      "options": {
        "cl": {
          "label": "Classic",
          "pvwmarkup": {
            "bg": "#424242",
            "header": "#333",
            "blockdiv": "#2d2d2d"
          }
        },
        "sb": {
          "label": "Sea blue",
          "pvwmarkup": {
            "bg": "#3e4155",
            "header": "#343542",
            "blockdiv": "#2f303c"
          }
        },
        "db": {
          "label": "Deep black",
          "pvwmarkup": {
            "bg": "#212121",
            "header": "#191919",
            "blockdiv": "#171717"
          }
        }
      }
    },
    "cc": {
      "type": "checkbox",
      "label": "Use custom colors?",
      "group": {
        "c1": {
          "type": "color",
          "label": "Primary color",
          "default": "#4d97ff"
        },
        "c2": {
          "type": "color",
          "label": "Secundary color",
          "default": "#ff8c1a"
        }
      }
    }
  },
  "preview": {
    "header": {
      "css": {
        "width": "100%",
        "height": "1.5vh"
      }
    },
    "main": {
      "css": {
        "width": "100%",
        "height": "calc(100% - 1.5vh)"
      },
      "children": {
        "blockdiv": {
          "css": {
            "display": "inline-block",
            "width": "calc(100% - 9vw)",
            "height": "19.6vh"
          }
        },
        "stage": {
          "css": {
            "display": "inline-block",
            "width": "8.2vw",
            "height": "11.9vh",
            "background-color": "white"
          }
        }
      }
    }
  }
}
